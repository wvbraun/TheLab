package code.interview.general;

import java.util.HashMap;

public class Strings 
{
	private String string;
	
	public Strings(String string)
	{
		this.string = string;
	}
	
	public char findFirstNonRepeated1()
	{
		char result = '\u0000';
		
		for (int i = 0; i < string.length(); ++i)
		{
			char c = string.charAt(i);
			if (occursOnlyOnce(c))
			{
				result = c;
				break;
			}
		}
		return result;
	}
	
	public char findFirstNonRepeated2()
	{
		char 						result = '\u0000';
		HashMap<Character, Integer> hash   = new HashMap<Character, Integer>();
		
		for (int i = 0; i < string.length(); ++i)
		{
			char c = string.charAt(i);
			if (hash.containsKey(c))
			{
				int n = hash.get(c);
				hash.put(c, ++n);
			}
			else
			{
				hash.put(c, 1);
			}
		}
		
		for (char c : hash.keySet())
		{
			if (hash.get(c) == 1)
			{
				result = c;
			}
		}
		
		return result;
	}
	
	private boolean occursOnlyOnce(char c)
	{
		int 	amt	 	 = 0;
		boolean onlyOnce = true;

		for (int i = 0; i < string.length(); ++i)
		{
			if (string.charAt(i) == c)
			{
				++amt;
			}
			if (amt > 1)
			{
				onlyOnce = false;
				break;
			}
		}
		
		return onlyOnce;
	}
	
	public String reverseIteratively()
	{
		StringBuilder result = new StringBuilder(string);
		
		for (int i = string.length() - 1; i > -1; --i)
		{
			result.setCharAt(string.length() - i - 1, string.charAt(i));
		}
		
		return result.toString();
	}
	
	public String reverseIteratively(char[] str)
	{
		for (int i = string.length() - 1; i > -1; --i)
		{
			swap()
		}
	}
	
	private static void swap(char[] str, int i, int j)
	{
		char tmp = str[i];
		str[i]   = str[j];
		str[j] 	 = tmp;
	}

}
