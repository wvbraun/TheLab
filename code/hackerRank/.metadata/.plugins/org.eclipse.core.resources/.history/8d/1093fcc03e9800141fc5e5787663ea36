				   n 		= scanner.nextInt();
		String[][] land   = new String[m][n];
		
		for (i = 0; i < m; ++i)
		{
			for (j = 0; j < n; ++j)
			{
				land[i][j] = scanner.next();
			}
		}
		
		findPerimiter(land);
		scanner.close();
	}

}
